{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/react-demo.html",
        "destination": "/react-demo.html"
      },
      {
        "source": "/signup",
        "destination": "/react-demo.html?signup=true"
      },
      {
        "source": "/setlist/**",
        "destination": "/react-demo.html"
      },
      {
        "source": "**",
        "destination": "/react-demo.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}