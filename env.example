# Mic Calendar Environment Configuration
# Copy this file to env.local and customize as needed

# Environment
NODE_ENV=development
VERSION=2.0.0

# API Configuration (for future backend integration)
API_BASE_URL=https://api.micfinderapp.com
API_TIMEOUT=10000

# External Services
CSV_DATA_URL=./coordinates.csv
FEEDBACK_EMAIL=support@micfinderapp.com

# Firebase Configuration (for React demo)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# Sentry Configuration (for production error tracking)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_APP_VERSION=2.0.0

# Google Analytics Configuration
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel Analytics Configuration (for go-to-market tracking)
VITE_MIXPANEL_TOKEN=YOUR_MIXPANEL_PROJECT_TOKEN

# Push Notifications (VAPID keys for Service Worker)
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# Stripe Configuration (for subscription billing)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
VITE_STRIPE_PRICE_PRO=price_1234567890_pro_monthly
VITE_STRIPE_PRICE_TEAM=price_1234567890_team_monthly  
VITE_STRIPE_PRICE_ENTERPRISE=price_1234567890_enterprise_monthly

# API Configuration
VITE_API_BASE_URL=https://api.setlistbuilder.com

# Feature Flags
FEATURE_ONBOARDING=true
FEATURE_MIC_FINDER=true
FEATURE_STATS_CHARTS=true
FEATURE_SETLIST_BUILDER=true
FEATURE_DATA_EXPORT=true
FEATURE_KEYBOARD_SHORTCUTS=true
FEATURE_COLLABORATION=false
FEATURE_OFFLINE_MODE=false
FEATURE_ANALYTICS=false
FEATURE_PUSH_NOTIFICATIONS=false

# Performance Settings
CHART_ANIMATION_DURATION=750
NOTIFICATION_DURATION=3000
DEBOUNCE_DELAY=300
MAX_EVENTS_PER_DAY=10
MAX_SAVED_SETLISTS=50

# UI Configuration
DEFAULT_VIEW=week
DEFAULT_THEME=dark
MOBILE_BREAKPOINT=768
MODAL_ANIMATION_DURATION=200

# Data Configuration
AUTO_SAVE=true
BACKUP_FREQUENCY=86400000
MAX_STORAGE_SIZE=5242880

# Debug Settings
DEBUG_ENABLED=false
LOG_LEVEL=info
SHOW_PERFORMANCE_METRICS=false
MOCK_API_DELAY=500
